{% extends "::base.html.twig" %}

{% block title %}AppBundle:Course:index{% endblock %}

{% block body %}
<h1>Welcome to the Course:index page</h1>

<table>
	<thead>
		<th>Name</th>
		<th>Teacher</th>
		<th></th>
		<th></th>
	</thead>
	<tbody>
	{% for course in courses %}
		<tr>
			<td>{{ course.name }}</td>
			<td>{{ course.teacher.fullName }}</td>
			<td><a href="{{ path('course_show', {'id': course.id }) }}">Show course</a></td>
			<td><a href="{{ path('course_edit', {'id': course.id }) }}">Edit course</a></td>
			<td><a href="{{ path('course_exams', {'id': course.id }) }}">Show exams</a></td>
		</tr>
	{% endfor %}
	</tbody>

	<a href="{{ path('course_create') }}">Create new course</a>
{% endblock %}