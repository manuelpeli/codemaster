{% extends "::base.html.twig" %}

{% block title %}AppBundle:Course:exams{% endblock %}

{% block body %}
<h1>Welcome to the Course:exams page</h1>

<table>
	<thead>
		<th>Date</th>
		<th>Grade</th>
		<th>Student</th>
	</thead>
	<tbody>
	{% for exam in exams %}
		<tr>
			<td>{{ exam.examDate | date('d-m-Y') }}</td>
			<td>{{ exam.grade }}</td>
			<td>{{ exam.student.firstName }} {{ exam.student.lastName }}</td>
		</tr>
	{% endfor %}
	</tbody>

	<a href="{{ path('course_index') }}">Back to the list</a>
{% endblock %}