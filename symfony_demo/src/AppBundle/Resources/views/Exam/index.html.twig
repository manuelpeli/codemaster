{% extends "::base.html.twig" %}

{% block title %}AppBundle:Exam:index{% endblock %}

{% block body %}
<h1>Welcome to the Exam:index page</h1>

<table>
	<thead>
		<th>Course</th>
		<th>Student</th>
		<th>Date</th>
		<th>Grade</th>
		<th></th>
		<th></th>
	</thead>
	<tbody>
	{% for exam in exams %}
		<tr>
			<td>{{ exam.course.name }}</td>
			<td>{{ exam.student.fullName }}</td>
			<td>{{ exam.examDate | date('d-m-Y') }}</td>
			<td>{{ exam.grade }}</td>
			<td><a href="{{ path('exam_show', {'id': exam.id }) }}">Show exam</a></td>
			<td><a href="{{ path('exam_edit', {'id': exam.id }) }}">Edit exam</a></td>
		</tr>
	{% endfor %}
	</tbody>

	<a href="{{ path('exam_create') }}">Create new exam</a>
{% endblock %}